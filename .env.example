# SCORM Wizard Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3002
NODE_ENV=development
FRONTEND_URL=http://localhost:8082

# Database (if using database)
DATABASE_URL=your_database_url_here

# API Keys (NEVER commit actual keys to git)
OPENAI_API_KEY=your_openai_api_key_here
JWT_SECRET=your_jwt_secret_here (min 32 characters)
CSRF_SECRET=your_csrf_secret_here

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here

# Monitoring
HEALTH_CHECK_INTERVAL=30000

# Development only
DEBUG=false Voorbeeld .env voor LTI 1.3 integratie (NIET committen naar git!)

LTI_KEY=your-lti-client-id
LTI_SECRET=your-lti-client-secret
LTI_URL=https://your-ngrok-url.ngrok.io
LTI_DATABASE_URL=file:./database.sqlite
SESSION_SECRET=some-random-secret

# LTI 1.3 Configuration (LTI Integration with Moodle)
LTI_CLIENT_ID=your-lti-client-id
LTI_DEPLOYMENT_ID=your-deployment-id
MOODLE_URL=https://your-moodle-instance.com

# LTI Security
LTI_ENCRYPTION_KEY=your-encryption-secret # session/LTI encryption key
LTI_PRIVATE_KEY_PATH=./keys/lti-private.key
LTI_PUBLIC_KEY_PATH=./keys/lti-public.key
LTI_KEYSET_URL=https://your-domain.com/.well-known/jwks.json

# LTI Endpoints
LTI_LAUNCH_URL=https://your-domain.com/lti/launch
LTI_AUTH_URL=https://your-domain.com/lti/auth
